{
    "runs": {
        "epochs": 8,
        "name": "wmt14",
        "dir": "./runs",
        "lr_schedule_per_epoch": true
    },
    "dataset": {
        "name": "wmt14",
        "path": "./data/wmt14"
    },
    "kpi": [
        {
            "name": "tps",
            "unit": "ms",
            "fqn": "Time per step",
            "plot": "box"
        },
        {
            "name": "ttc",
            "unit": "epochs",
            "fqn": "Time till convergence",
            "plot": "graph"
        },
        {
            "name": "acc_train",
            "unit": "%",
            "fqn": "Training Accuracy",
            "plot": "graph"
        },
        {
            "name": "acc_test",
            "unit": "%",
            "fqn": "Test Accuracy",
            "plot": "graph"
        },
        {
            "name": "test_loss",
            "unit": "",
            "fqn": "Test Loss",
            "plot": "graph"
        },
        {
            "name": "train_loss",
            "unit": "",
            "fqn": "Train Loss",
            "plot": "graph"
        },
        {
            "name": "gpu_mem",
            "unit": "MB",
            "fqn": "GPU Memory usage",
            "plot": "box"
        }
    ],
    "lr_scheduler": {
        "type": "-"
    },
    "optim": {
        "Apollo": {
            "name": "Apollo",
            "params": {
                "init_lr": "None",
                "lr": 0.01,
                "eps": 0.0001,
                "beta": 0.9,
                "warmup": 500,
                "weight_decay_type": "L2",
                "weight_decay": 0.00025,
                "rebound": "constant"
            }
        },
        "ApolloW": {
            "name": "Apollo",
            "params": {
                "init_lr": "None",
                "lr": 0.01,
                "eps": 0.0001,
                "beta": 0.9,
                "warmup": 500,
                "weight_decay_type": "decoupled",
                "weight_decay": 0.025,
                "rebound": "constant"
            }
        },
        "Adam": {
            "name": "Adam",
            "params": {
                "lr": 0.0005,
                "beta1": 0.9,
                "beta2": 0.98,
                "eps": 1e-08,
                "weight_decay": 0
            }
        },
        "AdamJan": {
            "name": "AdamJan",
            "params": {
                "lr": 0.0003,
                "beta1": 0.9,
                "beta2": 0.98,
                "eps": 0.0001,
                "weight_decay": 0,
                "weight_decouple": true
            }
        },
        "AdaHessian": {
            "name": "AdaHessian",
            "params": {
                "lr": 0.1,
                "beta1": 0.9,
                "beta2": 0.98,
                "eps": 0.0001,
                "weight_decay": 0,
                "warmup": 0
            }
        },
        "AdaBelief": {
            "name": "AdaBelief",
            "params": {
                "lr": 0.0005,
                "beta1": 0.9,
                "beta2": 0.98,
                "eps": 1e-08,
                "weight_decay": 0
            }
        },
        "AdamW": {
            "name": "Adam",
            "params": {
                "lr": 0.0005,
                "beta1": 0.9,
                "beta2": 0.98,
                "eps": 1e-08,
                "weight_decay": 0,
                "weight_decouple": true
            }
        },
        "RMSprop": {
            "name": "RMSprop",
            "params": {
                "lr": 0.001,
                "alpha": 0.99,
                "eps": 1e-08,
                "weight_decay": 0.00025
            }
        },
        "SGD": {
            "name": "SGD",
            "params": {
                "lr": 0.1,
                "momentum": 0,
                "weight_decay": 0.00025
            }
        }
    }
}